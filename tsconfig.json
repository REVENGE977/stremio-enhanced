{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "module": "CommonJS",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*"
  ]
}
{
  "name": "stremio-enhanced",
  "version": "1.0.0",
  "description": "Electron-based Stremio client with plugins and themes support.",
  "main": "./dist/main.js",
  "scripts": {
    "dist": "tsc && node ./copyComponents.js",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "dev": "node -e \"console.clear()\" && npm run dist && npx electron --log-level=3 ./dist/main.js --devtools",
    "build": "npm run dist && electron-builder",
    "build:linux:x64": "electron-builder --linux --x64",
    "build:linux:arm64": "electron-builder --linux --arm64",
    "build:mac:x64": "electron-builder --mac --x64",
    "build:mac:arm64": "electron-builder --mac --arm64",
    "build:win:x64": "electron-builder --win --x64",
    "build:win": "electron-builder --win"
  },
  "repository": "https://github.com/REVENGE977/stremio-enhanced.git",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "author": "REVENGE",
  "license": "MIT",
  "devDependencies": {
    "@types/discord-rpc": "^4.0.8",
    "@types/electron": "^1.4.38",
    "@types/unzipper": "^0.10.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "acrylic-vibrancy": "^1.1.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^7.32.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "@xhayper/discord-rpc": "^1.2.1",
    "discord-api-types": "^0.37.119",
    "discord-rpc": "^4.0.1",
    "electron-prompt": "^1.7.0",
    "electron-updater": "^5.3.0",
    "marked": "^15.0.7",
    "unzipper": "^0.12.3",
    "winston": "^3.11.0"
  },
  "optionalDependencies": {
    "dmg-license": "1.0.11"
  },
  "files": [
    "static/**/*",
    "!**/node_modules/*",
    "!**/dist/*",
    "!**/src/*",
    "index.html"
  ],
  "build": {
    "appId": "com.revenge977.stremio-enhanced",
    "productName": "Stremio Enhanced",
    "asar": true,
    "icon": "images/icon",
    "directories": {
      "output": "release-builds"
    },
    "publish": {
      "provider": "github",
      "owner": "REVENGE977",
      "repo": "stremio-enhanced"
    },
    "asarUnpack": [
      "**/register-scheme/build/Release/*.node",
      "**/register-scheme/node-addon-api/src/node-api.target.mk"
    ],
    "extraFiles": [
      {
        "from": "stremio-server/common",
        "to": "./streamingserver",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "extraFiles": [
        {
          "from": "stremio-server/windows",
          "to": "./streamingserver",
          "filter": ["**/*"]
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "images/icon.icns",
      "extraFiles": [
        {
          "from": "stremio-server/macos",
          "to": "./streamingserver",
          "filter": ["**/*"]
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "images/icon.png",
      "extraFiles": [
        {
          "from": "stremio-server/linux",
          "to": "./streamingserver",
          "filter": ["**/*"]
        }
      ]
    }
  }
}
